<Application x:Class="WDCApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WDCApp"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/ButtonStyle.xaml"/>
                <ResourceDictionary Source="Styles/TextBoxStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="ListBoxItemSeparatorStyle" TargetType="ListBoxItem">
                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                <Setter Property="BorderBrush" Value="LightGray"/>
                <Setter Property="Padding" Value="0,0,0,5"/>
            </Style>
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Montserrat"/>
               
            </Style>
            <Style TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}" />
            <Style TargetType="TextBox" BasedOn="{StaticResource RoundedTextBoxStyle}" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
