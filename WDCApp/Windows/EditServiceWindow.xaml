<Window x:Class="WDCApp.Windows.EditServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WDCApp.Windows"
        mc:Ignorable="d"
        Title="Изменение услуги" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Название услуги:"/>
            <TextBox Margin="5" x:Name="txtNameService"/>
            <TextBlock Text="Стоимость услуги:"/>
            <TextBox Margin="5"  x:Name="txtPriceService"/>
            <TextBlock Text="Описание услуги:"/>
            <TextBox Margin="5" x:Name="txtDescriptionService" TextWrapping="Wrap"/>
            <TextBox x:Name="txtTypeOfService" IsReadOnly="True" />
            <Button Height="25" Content="Сохранить изменения" x:Name="btnSaveEditService" Click="btnSaveEditService_Click"/>
        </StackPanel>
    </Grid>
</Window>
